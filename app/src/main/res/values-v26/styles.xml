<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_hig</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">@dimen/spacer_6</item>
        <item name="android:paddingVertical">@dimen/spacer_2</item>
        <item name="android:paddingLeft">@dimen/spacer_16</item>
    </style>

    <style name="login_img">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/spacer_10</item>
    </style>
</resources>