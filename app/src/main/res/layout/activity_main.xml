<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="online.e_wedd.apps.Activities.MainActivity">

    <FrameLayout
        android:id="@+id/MA_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/putih"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/grey_shadow"
        android:elevation="2dp"/>
    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/MA_navigation"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/colorGraytransparent"
        app:itemTextColor="@color/colorGraytransparent" />

</LinearLayout>
