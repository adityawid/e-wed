<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="online.e_wedd.apps.SampleActivity">
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/form_pic"
            android:layout_width="@dimen/image_profile"
            android:layout_height="@dimen/image_profile"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            style="@style/item_profile_linear">

            <TextView
                style="@style/item_profile_left"
                android:text="Nama" />

            <TextView
                android:id="@+id/PF_nama"
                tools:text="Anis Adila"
                style="@style/item_profile_right" />

        </LinearLayout>

        <View
            style="@style/viewline" />

        <LinearLayout
            style="@style/item_profile_linear">

            <TextView
                android:text="No HP"
                style="@style/item_profile_left" />

            <TextView
                android:id="@+id/PF_noHP"
                style="@style/item_profile_right"
                tools:text="085712621106" />

        </LinearLayout>

        <View
            style="@style/viewline" />


        <View
            style="@style/viewline" />

        <LinearLayout
            style="@style/item_profile_linear">

            <TextView
                style="@style/item_profile_left"
                android:text="Provinsi" />

            <TextView
                android:id="@+id/PF_provinsi"
                style="@style/item_profile_right"
                tools:text="Jawa Tengah" />

        </LinearLayout>



        <View
            style="@style/viewline" />

        <LinearLayout
            style="@style/item_profile_linear">

            <TextView
                style="@style/item_profile_left"
                android:text="Kota" />

            <TextView
                android:id="@+id/PF_kota"
                style="@style/item_profile_right"
                tools:text="Semarang" />
        </LinearLayout>

        <View
            style="@style/viewline"/>

        <LinearLayout
            style="@style/item_profile_linear">

            <TextView
                style="@style/item_profile_left"
                android:text="Alamat" />

            <TextView
                android:id="@+id/PF_alamat"
                style="@style/item_profile_right"
                tools:text="Jl. Karonsih Selatan IX / 671 Ngaliyan" />

        </LinearLayout>

        <View
            style="@style/viewline" />

    </LinearLayout>
</ScrollView>
